<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="CopyPasteHelper" Height="450" Width="400"
        Loaded="Window_Loaded"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        xmlns:tb="clr-namespace:H.NotifyIcon;assembly=H.NotifyIcon.Wpf"
        Icon="copy.ico"
        >
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static ApplicationCommands.Help}" Executed="CommandBinding_Executed"/>
    </Window.CommandBindings>
    <Grid>
        <tb:TaskbarIcon x:Name="myNotifyIcon"
                    ToolTipText="Copy Paste Helper"
                    MenuActivation="LeftOrRightClick"
                    PopupActivation="DoubleClick"
                    IconSource="copy.ico"
                    >
            <tb:TaskbarIcon.TrayToolTip>
                <Border>
                    <Image x:Name="imgToolTip"></Image>
                </Border>
            </tb:TaskbarIcon.TrayToolTip>
        </tb:TaskbarIcon>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="addresses" Width="350" Margin="0" ItemsSource="{x:Static local:App.Addresses}" SelectionChanged="ComboBox_SelectionChanged"></ComboBox>
                <Button x:Name="wifi" Margin="5,0" Click="wifi_Click">WIFI</Button>
            </StackPanel>
            <Image x:Name="img">
                <Image.InputBindings>
                    <MouseBinding MouseAction="LeftDoubleClick" Command="{x:Static ApplicationCommands.Help}"  />
                </Image.InputBindings>
            </Image>
        </StackPanel>
    </Grid>
</Window>
